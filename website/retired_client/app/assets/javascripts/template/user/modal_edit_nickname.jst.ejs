<i class="close icon"></i>

<div class="header">Edit the nickname</div>

<div class="content">
  <div class="haigy-padding-lr-25px">
    <form id="user-m-edit-form" class="ui form">
      <div class="field">
        <label>Nickname</label>
        <input name="nickname" type="text" placeholder="nickname" value="<%= nickname %>">
      </div>
      <div class="ui error message"></div>
    </form>
  </div>
</div>

<div class="actions">
  <div class="ui horizontally padded grid">
    <div class="eight wide column">
      <button id="user-m-edit-cancel" class="ui negative button">Cancel</button>
    </div>
    <div class="eight wide column">
      <button id="user-m-edit-submit" class="ui positive fluid button">Save</button>
    </div>
  </div>
</div>