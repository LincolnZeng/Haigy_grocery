{
  "id": <%= raw(item.id.to_json) %>,
  "name": <%= raw(item.name.to_json) %>,
  "cover_image_path": <%= raw(item.cover_image.url(:thumb).to_json) %>,
  "large_cover_image_path": <%= raw(item.cover_image.url(:medium).to_json) %>,
  "is_category": <%= raw(item.is_category.to_json) %>,
  "parent_category_item_id": <%= raw(item.parent_category_item_id.to_json) %>,
  "unit": <%= raw(item.unit.to_json) %>,
  "has_fixed_item_size": <%= item.has_fixed_item_size %>,
  "item_size": <%= raw(item.item_size.to_json) %>,
  "brand": <%= raw(item.brand.to_json) %>,
  "manufacturer": <%= raw(item.manufacturer.to_json) %>,
  "details": <%= raw(item.details.to_json) %>,
  "ingredients": <%= raw(item.ingredients.to_json) %>,
  "warnings": <%= raw(item.warnings.to_json) %>,
  "directions": <%= raw(item.directions.to_json) %>,
  "nutrition_facts": <%= raw(item.nutrition_facts.to_json) %>,

  "is_produce": <%= item.is_produce %>,
  "is_seasonal": <%= item.is_seasonal %>,

  "item_image": [
    <% imageIndex = 0 %>
	  <% item.item_images.each do |itemImage| %>
      <% if itemImage.customer_viewable %>
        <% if imageIndex != 0 %>,<% end %>
        {
          "id": <%= raw(itemImage.id.to_json) %>,
          "thumb_path": <%= raw(itemImage.image.url(:thumb).to_json) %>,
          "medium_path": <%= raw(itemImage.image.url(:medium).to_json) %>
        }
        <% imageIndex += 1 %>
      <% end %>
	  <% end %>
  ],

  "category_path": <%= render partial: "category_path", locals: {categoryPath: @categoryPath} %>,
  "store_item_info": <%= render partial: "store_item_infos/template_member", locals: {storeItemInfo: @storeItemInfo, storeHash: @storeHash} %>
}